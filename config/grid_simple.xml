<config>

	<simulation
		simulation_time="1"
		output_rate="1"
		smoothing_kernel_size="0.03"
		num_y_cells="65"
		pressure_k="1000"
		rho0="1000"
		particle_mass="0.0072"
		ground_method="elastic"
		ground_spring="3000"
		gravity="0 -9.81 0"
		time_step="0.0001"
		surface_air_threshold="0.25"
		>

		<heightfield
			file="data/height_field/alpine-terrain.tif"
			scaling="0.4">
			<tiff step_x="1" step_y="1"></tiff>
		</heightfield>

		<particles_grid
			min_pos="0.55 0.01 0.5"
			max_pos="0.65 0.05 0.6"
			count="10 5 10"
			velocity="0 -0.1 0"
			temperature="100"
			calc_mass="true"
			>
		</particles_grid>

	</simulation>

	<output
		format="point"
		color="density">
		<rendering
			scene="data/scenes/alpine.rib"
			constantwidth="0.006">
		</rendering>
	</output>
</config>
