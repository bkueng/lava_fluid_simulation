<config>

	<simulation
		simulation_time="1"
		output_rate="3"
		smoothing_kernel_size="0.005"
		lookup_dist="0.00545"
		num_y_cells="200"
		pressure_k="1000"
		rho0="1000"
		particle_mass="0.000012"
		ground_method="elastic"
		ground_spring="3000"
		gravity="0 -9.81 0"
		surface_air_threshold="0.4"

		viscosity_coeff_a="0.002"
		viscosity_coeff_b="10"

		temperature_diffusion_coeff="90000"
		temperature_diffusion_coeff_air="0.5"
		temperature_diffusion_coeff_ground="19000000"

		time_step="0.0001"
		>
		<!-- Note: this small timestep is needed to avoid instabilities.
			 0.0002 already produces small instabilities -->

		<heightfield
			file="data/height_field/alpine-terrain.tif"
			scaling="0.4">
			<tiff step_x="1" step_y="1"></tiff>
		</heightfield>

		<particles_grid
			min_pos="0.55 0.01 0.5"
			max_pos="0.65 0.05 0.6"
			count="40 20 40"
			velocity="0 -0.3 0"
			temperature="1000"
			calc_mass="true"
			>
		</particles_grid>

	</simulation>

